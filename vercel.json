{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next@^13.0.0",
      "config": { "zeroConfig": true }
    },
    {
      "src": "apps/api/package.json",
      "use": "@vercel/node@^2.0.0"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "REDIS_URL": "@redis_url",
    "JWT_SECRET": "@jwt_secret",
    "NODE_ENV": "production"
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  }
}
